<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background" >

        <Button
            android:id="@+id/newGameButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/submitQuesButton"
            android:layout_alignRight="@+id/submitQuesButton"
            android:layout_below="@+id/continueButton"
            android:layout_marginTop="22dp"
            android:text="@string/newGame"
            android:padding="10dp"  />

        <Button
            android:id="@+id/submitQuesButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/newGameButton"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="36dp"
            android:text="@string/submitQuestion"
            android:padding="10dp"  />

        <Button
            android:id="@+id/leaderboardButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/submitQuesButton"
            android:layout_alignRight="@+id/submitQuesButton"
            android:layout_below="@+id/submitQuesButton"
            android:layout_marginTop="33dp"
            android:text="@string/leaderboard"
            android:padding="10dp"  />

        <Button
            android:id="@+id/quitButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/leaderboardButton"
            android:layout_alignRight="@+id/leaderboardButton"
            android:layout_below="@+id/leaderboardButton"
            android:layout_marginTop="26dp"
            android:padding="10dp"
            android:text="@string/quit" />

        <Button
            android:id="@+id/continueButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/newGameButton"
            android:layout_alignParentTop="true"
            android:layout_alignRight="@+id/newGameButton"
            android:layout_marginTop="98dp"
            android:padding="10dp"
            android:text="@string/continueString" />

        <TextView
            android:id="@+id/currentPointsText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:layout_marginRight="14dp"
            android:layout_marginTop="13dp"
            android:textSize="18sp"
            android:textColor="@color/purple"
            android:text="@string/currentPoints" />

</RelativeLayout>