<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <EditText
        android:id="@+id/userNameField"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/enterUserText"
        android:layout_below="@+id/enterUserText"
        android:layout_marginTop="14dp"
        android:ems="10" 
        android:hint="@string/username"
        android:inputType="textPersonName"
        android:textSize="26sp">
    </EditText>

    <Button
        android:id="@+id/createButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignRight="@+id/passwordOne"
        android:layout_below="@+id/passwordTwo"
        android:layout_marginTop="35dp"
        android:text="@string/create" 
        android:textSize="26sp"/>

    <EditText
        android:id="@+id/passwordOne"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/userNameField"
        android:layout_below="@+id/enterPass1"
        android:layout_marginTop="15dp"
        android:ems="10"
        android:hint="@string/password"
        android:inputType="textPassword" 
        android:textSize="26sp">
    </EditText>

    <EditText
        android:id="@+id/passwordTwo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/enterPass2"
        android:layout_below="@+id/enterPass2"
        android:layout_marginTop="16dp"
        android:ems="10"
        android:hint="@string/password"
        android:inputType="textPassword" 
        android:textSize="26sp"/>

    <EditText
        android:id="@+id/emailField"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/enterEmail"
        android:layout_below="@+id/enterEmail"
        android:ems="10"
        android:inputType="textEmailAddress" 
        android:hint="@string/email"
        android:textSize="26sp"/>

    <TextView
        android:id="@+id/enterPass1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/passwordOne"
        android:layout_below="@+id/emailField"
        android:layout_marginTop="47dp"
        android:text="@string/enterPass"
        android:textSize="26sp" />

    <TextView
        android:id="@+id/enterEmail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/userNameField"
        android:layout_below="@+id/userNameField"
        android:layout_marginTop="52dp"
        android:text="@string/enterEmail"
        android:textSize="26sp" />

    <TextView
        android:id="@+id/enterPass2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/passwordOne"
        android:layout_below="@+id/passwordOne"
        android:layout_marginTop="65dp"
        android:text="@string/reEnterPass"
        android:textSize="26sp" />

    <TextView
        android:id="@+id/enterUserText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="171dp"
        android:ems="10"
        android:text="@string/enterUserName"
        android:textSize="26sp" />

</RelativeLayout>